  "description": "tools for managing adventurers daily activity",
  "scripts": {
    "typechain": "typechain --show-stack-traces --target ethers-v5 --outDir src/contracts 'src/abis/*.json'",
    "status": "npx hardhat run src/scripts/status.ts  --network ftm_mainnet",
    "adventure": "npx hardhat run src/scripts/adventure.ts  --network ftm_mainnet",
    "level-up": "npx hardhat run src/scripts/level_up.ts  --network ftm_mainnet",
    "run-all": "npm run adventure && npm run level-up && npm run status",
    "schedule": "npx hardhat run src/scripts/schedule.ts --network ftm_mainnet"
  },
